{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["dom", "dom.iterable", "esnext"],
      "module": "commonjs",
      "types": [
        "node"
      ],
      "moduleResolution": "node",
      "isolatedModules": false,
      "esModuleInterop": true,
      "jsx": "preserve",
      "incremental": true,
      "resolveJsonModule": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }
  